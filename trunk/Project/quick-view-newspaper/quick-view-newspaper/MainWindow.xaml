<Window x:Class="quick_view_newspaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xem Báo Nhanh" Height="100" Width="1370" WindowStartupLocation="Manual" Top="0" Left="0">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Grid.Row="0" FontSize="15" FontWeight="Bold">Tên Báo:</Label>
            <Label Grid.Column="0" Grid.Row="1" FontSize="15" FontWeight="Bold">Thể Loại</Label>
            <Label Grid.Column="1" Grid.Row="0" Name="lblName" FontSize="15" FontWeight="Bold" Margin="50, 0, 0, 0">Tuổi trẻ</Label>
            <Label Grid.Column="1" Grid.Row="1" Name="lblCategory" FontSize="15" FontWeight="Bold" Margin="50, 0, 0, 0">Thế Giới</Label>
        </Grid>
    </Grid>
</Window>
